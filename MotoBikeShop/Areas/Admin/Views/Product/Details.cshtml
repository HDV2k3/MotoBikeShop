@model MotoBikeShop.Data.HangHoa
@using Microsoft.AspNetCore.Mvc.RazorPages
@namespace MotoBikeShop.Areas.Admin.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Chi Tiết Sản Phẩm</title>

    <!-- Bootstrap icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Custom fonts for this template-->
    <link href="/vendor_admin/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css_admin/sb-admin-2.min.css" rel="stylesheet">
    <link href="/css_admin/css-product.css" rel="stylesheet" />

</head>

<style>
    .product-details {
        margin-top: 40px;
    }

    .product-image {
        width: 100%;
        height: auto;
        max-width: 300px;
        margin-bottom: 20px;
    }

    .additional-images {
        margin-top: 20px;
    }

    .additional-image {
        width: 100%;
        height: auto;
        max-width: 300px;
        margin-bottom: 10px;
    }
</style>



<body>
    <div class="container">
        <h2>Product Details</h2>
        <div class="product-details">
            <h4>Mã hàng hóa: @Model.MaHH</h4>
            <h4>Tên hàng hóa: @Model.TenHH</h4>
            <h4>Tên Alias: @Model.TenAlias</h4>
            <h4>Mô tả đơn vị: @Model.MoTaDonVi</h4>
            <h4>Đơn giá: @Model.DonGia</h4>
            <h4>Ngày sản xuất: @Model.NgaySX</h4>
            <h4>Giảm giá: @Model.GiamGia %</h4>
            <h4>Số lần xem: @Model.SoLanXem</h4>
            <h4>Mô tả: @Model.TenHH</h4>
            <h4>loại: @Model.MaLoai</h4>
            <h4>Nhà cung cấp: @Model.MaNCC</h4>

            <img src="~/images/@Model.Hinh" alt="Product Image" class="product-image" />
            <div>
                <a class="btn btn-danger" asp-action="Index"><i class="bi bi-chevron-left"></i> Back to List</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.MaHH">Edit</a> 
            </div>

        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="/vendor_admin/jquery/jquery.min.js"></script>
    <script src="/vendor_admin/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor_admin/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js_admin/sb-admin-2.min.js"></script>
</body>

</html>