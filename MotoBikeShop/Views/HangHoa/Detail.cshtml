    // Lắng nghe sự kiện khi click vào biểu tượng "fa fa-plus"
    document.addEventListener('DOMContentLoaded', function () {
      var plusIcons = document.getElementsByClassName('fa-plus');

      Array.prototype.forEach.call(plusIcons, function (icon) {
        icon.addEventListener('click', function () {
          var accordionItem = this.closest('.accordion-item');
          var collapseBody = accordionItem.querySelector('.accordion-body');

          if (collapseBody.classList.contains('show')) {
            collapseBody.classList.remove('show');
          } else {
            collapseBody.classList.add('show');
          }
        });
      });
    });
</script>