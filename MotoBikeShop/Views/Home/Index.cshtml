        <script>
        // Khi trang được tải hoàn thành
        $(document).ready(function () {
            // Thiết lập carousel
            $('.carousel').carousel({
                interval: 2000, // Tự động chuyển đổi mỗi 1 giây
           
            });

            // Cập nhật vị trí phân trang khi carousel chuyển đổi ảnh
            $('.carousel').on('slide.bs.carousel', function () {
                var currentIndex = $(this).find('.carousel-item.active').index() + 1;
                $('.carousel-indicators li').removeClass('active');
                $('.carousel-indicators li:nth-child(' + currentIndex + ')').addClass('active');
            });
        });
</script>
   
