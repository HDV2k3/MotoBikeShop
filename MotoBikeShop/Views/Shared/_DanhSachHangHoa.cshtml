@{
    Layout = "_LayoutCustomer";
}
<body>
    @RenderSection("BreadCum", required: false)

    <div class="container-fluid fruite py-5">
        <div class="container py-5">
            <h1 class="mb-4">Motobike Shop</h1>
            <div class="row g-4">
                <div class="col-lg-12">
                    <div class="row g-4">
                        <div class="col-xl-3">
                            @await Html.PartialAsync("_TimKiemPanel")
                        </div>
                        <div class="col-6"></div>
                        <div class="col-xl-3">
                            <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                                <label for="moto">Sắp Xếp:</label>
                                <select id="selectOption" onchange="redirectOnChange(this)" class="border-0 form-select-sm bg-light me-3" form="motoform">
                                    <option value="all">Tất Cả</option>
                                    <option value="tangdan">Giá Tăng Dần</option>
                                    <option value="giamdan">Giá Giảm Dần</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4">
                        <div class="col-lg-3">
                            <div class="row g-4">
                                @await Component.InvokeAsync("MenuLoai")
                                <div class="col-lg-12">
                                </div>
                                @await Component.InvokeAsync("NhaCungCap")
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="row g-4 justify-content-center">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function redirectOnChange(selectEl) {
            var selectedValue = selectEl.value;
            if (selectedValue === "all") {
                // Chuyển hướng đến trang tất cả
                window.location.href = "/HangHoa";
            } else if (selectedValue === "tangdan") {
                // Chuyển hướng đến trang giá tăng dần
                window.location.href = "/HangHoa/TangDan";
            } else if (selectedValue === "giamdan") {
                // Chuyển hướng đến trang giá giảm dần
                window.location.href = "/HangHoa/GiamDan";
            }
        }
    </script>
</body>