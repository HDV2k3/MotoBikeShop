@using MotoBikeShop.Data
@foreach (var item in Model)
{
    <div class="d-flex align-items-center justify-content-start">
        <div class="rounded" style="width: 100px; height: 100px;">
            <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHH">
                <img src="~/images/@item.Hinh" class="img-fluid w-100 rounded-top" alt="@item.TenHH">
            </a>
        </div>
        <div>
            <h6 class="mb-2">@item.TenHH</h6>
            <div class="d-flex mb-2">
                @for (int i = 0; i < 4; i++)
                {
                    <i class="fa fa-star text-secondary"></i>
                }
               
            </div>
            <div class="d-flex mb-2">
                <h5 class="fw-bold me-2">@item.DonGia.ToString("#,##0.00")VND</h5>
            </div>
        </div>
    </div>
}