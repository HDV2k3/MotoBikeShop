    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var activeNavLink = sessionStorage.getItem("activeNavLink");
            if (activeNavLink !== null) {
                $(".nav-item").removeClass("active");
                $("#" + activeNavLink).addClass("active");
            }
            $(".nav-item").click(function () {
                var activeNavLink = this.id;
                sessionStorage.setItem("activeNavLink", activeNavLink);

                $(".nav-item").removeClass("active");
                $("#" + activeNavLink).addClass("active");
            });
        });
    </script>
    <script>
        $(".nav-item.nav-link").on("click", function () {
            $(".nav-item.nav-link.active").removeClass('active');
            $(this).addClass('active');
