                                        <div class="accord-content">
                                            <a href="https://www.facebook.com/hondaracingcorporation" target="_blank">
                                                <img src="https://www.honda.com.vn/images/social/ico-facebook.png">
                                            </a>
                                            <a href="https://www.instagram.com/hondaracingcorporation" target="_blank">
                                                <img src="https://www.honda.com.vn/images/social/ico-ig.png">
                                            </a>
                                            <a href="https://www.youtube.com/user/HondaRacingHRC" target="_blank">
                                                <img src="https://www.honda.com.vn/images/social/ico-youtube.png">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
                <div>
                    <button>
                        <i class="fa fa-bars"></i>
                    </button>
                    <a href="/">
                        <img src="https://www.honda.com.vn/images/logo_new.png?v=20240415" alt="@SharedLocalizer["ShopName"]">
                    </a>
                </div>
            </div>
            <nav>
                <div class="social-mobile">
                    <div class="b-social" id="btn-social-pc">
                        <div class="btn-social">
                            <img src="https://www.honda.com.vn/images/social/ico-facebook-red.png">
